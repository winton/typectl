{
  "name": "typectl",
  "version": "2.28.1",
  "description": "TypeScript control flow library",
  "main": "./dist/cjs/typectl.js",
  "scripts": {
    "build": "./bin/build",
    "prepare": "husky install; npm run build",
    "start": "./bin/watch",
    "test": "NODE_ENV=\"${NODE_ENV:-test}\" mocha",
    "update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/winton/typectl.git"
  },
  "author": "Winton Welsh <mail@wintoni.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/winton/typectl/issues"
  },
  "homepage": "https://github.com/winton/typectl#readme",
  "dependencies": {
    "web-streams-polyfill": "4.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "11.0.4",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.10",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.3",
    "expect": "29.7.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "mocha": "11.1.0",
    "npm-check-updates": "17.1.15",
    "prettier": "3.5.3",
    "source-map-support": "0.5.21",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  }
}
